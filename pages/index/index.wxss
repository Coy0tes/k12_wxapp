/**index.wxss**/
page{
  overflow-y: auto;
}

.message{
  width: 100%;
  margin: auto;
}

.topNav{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 20rpx;
}

.topNav button{
  width: 190rpx;
  height: 120rpx;
}

.topNav button>view{
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  color: #ffffff;
  /* padding-left: 20rpx;
  padding-top: 24rpx; */
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.topNav form{
  border-radius: 20rpx;
  box-shadow: 2px 2px 10px #d1d1d1;
}

.topNav .tit{
  width: 100%;
  font-size: 30rpx;
  height: 30rpx;
  color: #ffffff !important;
  margin-bottom: 10rpx;
  text-align: left;
  padding-left: 20rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.nav{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.nav image{
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid #000; */
  border-radius: 36rpx;
  box-shadow: 2px 2px 10px #d1d1d1;
}

.nav .navList{
  width: 33%;
  margin-bottom: 20rpx;
}

.nav .navList .tap{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.nav .navList .tap .count{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #FC035D;
  border-radius: 50%;
  right: 75rpx;
  top: 0;
}

.topNav .count{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #FC035D;
  border-radius: 50%;
  right: 0;
  top: 0;
}

.nav .navList .tap text{
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #2f138d;
}

swiper{
  height: 360rpx;
}

swiper-item image{
  width: 100%;
}

.split{
  width: 100%;
  height: 60rpx;
  background-color: rgba(0, 191, 255, .5)
}

button::after{
  border: none;
}

button{
  background-color: #ffffff;
  outline-color: #ffffff;
  padding: 0;
}

button:hover{
  background-color: #ffffff;
}

.bigForm{
  display: block;
  width: 100%;
  height: 100%;
  padding: 0;
}

.nav .navList form .tap text{
  color: #777777;
}