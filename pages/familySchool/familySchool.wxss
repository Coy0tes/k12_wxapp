.box{
  padding: 30rpx;
}

.list{
  width: 100%;
  height: 300rpx;
  background-color: #8ccdf9;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.list .childMes{
  width: 320rpx;
  display: flex;
  flex-direction: column;
}

.list .childMes>view{
  display: flex;
  flex-direction: row;
  color: #2f138d;
  font-size: 44rpx;
}

.name .right{
  font-size: 24rpx;
  line-height: 80rpx;
}

.childHeadImg{
  margin-right: 70rpx;
}

.childHeadImg view{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}