page {
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 36rpx;
}

.box {
  display: flex;
  flex-direction: column;
  color: #545454;
}

.box>view {
  margin-bottom: 40rpx;
}

.bigBox{
  width: 100%;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.right{
  flex: 1;
}

.lrBox {
  display: flex;
  flex-direction: row;
  justify-content: between;
  align-items: center;
  color: #545454;
}

.InputBorder {
  width: 100%;
  height: 66rpx;
  background-color: #E8E5E5;
  border-radius: 4rpx;
  font-size: 32rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.textCenter {
  text-align: center;
}

textarea{
  width: 100%;
  background-color: #E8E5E5;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.submit{
  color: #ffffff;
  background-color: #6FBDFF;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
}

.add{
  margin: auto;
}

.add image{
  width: 46rpx;
  height: 38rpx;
}

.medicineTime{
  padding-left: 40rpx;
  box-sizing: border-box;
}

.delete{
  width: 80px;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  background-color: #F92950;
  color: #ffffff;
  font-size: 32rpx;
  display: inline-block;
  position: absolute;
  right: -80px;
  top: 0;
}