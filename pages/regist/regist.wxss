/* pages/regist/regist.wxss */
.registBox{
  display: flex;
  flex-direction: column;
}

.registBox>view{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f1f1f1;
}

.left{
  width: 200rpx;
  height: 120rpx;
  font-size: 32rpx;
  line-height: 120rpx;
  /* text-align: center; */
  display: flex;
  justify-content: space-around;
}

.right{
  width: 400rpx;
  height: 120rpx;
  font-size: 28rpx;
  line-height: 120rpx;
}

.right input{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
}

.right picker{
  width: 100%;
  height: 100%;
}

.right picker view{
  width: 100%;
  height: 120rpx;
}

.submit{
  width: 80%;
  height: 70rpx;
  border-radius: 70rpx;
  color: #ffffff;
  line-height: 70rpx;
  text-align: center;
  background-color: #6899f8;
  margin-top: 160rpx;
  border: none;
}

.warning{
  font-size: 28rpx;
  color: #a0a0a0;
  margin-top: 20rpx;
  text-align: center;
}

.warning view{
  color: red;
  text-decoration: underline;
}

.right{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.invat{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  background-color: #87CEFA;
  color: #ffffff;
  line-height: 60rpx;
  border-radius: 10rpx;
}