.title{
  width: 100%;
  height: 80rpx;
  color: #2f138d;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #DADDE5;
  font-size: 36rpx;
}

.box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.row{
  width: 100%;
  height: 114rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #000000;
  border-bottom: 1px solid #DADDE5;
  font-size: 32rpx;
}

.row .childImg{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.row .Img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 20rpx;
}

.detail{
  background-color: #8DCDF9;
  width: 118rpx;
  height: 66rpx;
  color: #ffffff;
  line-height: 66rpx;
  text-align: center;
}