.card {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list {
  width: 95%;
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 10rpx 0;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: bottom;
}

.list .title {
  margin-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: 800;
}

.list .content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 32rpx;
}

.list .content>view {
  width: 50%;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  /* font-weight: 600; */
}

.list .content>view .left {
  width: 130rpx;
  text-align: left;
}

.tab {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.tab view {
  width: 50%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab .active {
  border-bottom: 4rpx solid #87cefa;
}

.tab .active2 {
  border-bottom: 4rpx solid #eeeeee;
}
