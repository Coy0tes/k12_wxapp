.box{
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.childMsg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.childMsg .childImg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}

.childMsg .name{
  font-size: 44rpx;
  color: #2f138d;
  margin: 30rpx 0;
}

.card{
  width: 80%;
  height: 150rpx;
  background-color: #8ccdf9;
  color: #2f138d;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}


