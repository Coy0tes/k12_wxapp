.select{
  width: 100%;
  height: 78rpx;
  background-color: #e1e1e1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.select picker{
  width: 90%;
}

.select picker view{
  width: 100%;
  height: 56rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  background-size: auto 70%;
  background-position: 15rpx center;
  background-repeat: no-repeat;
}

.select view input{
  height: 100%;
  line-height: 28rpx;
  font-size: 32rpx;
  margin-left: 60rpx;
}

.dateList{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.dateList>view{
  width: 100%;
  height: 106rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #bfbfbf;
  position: relative;
}

.dateList view:nth-child(1){
  border-top: 1rpx solid #2aa2ff;
}

.dateList>view .count{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: #FC035D;
  border-radius: 50%;
  right: 10rpx;
  top: 10rpx;
}