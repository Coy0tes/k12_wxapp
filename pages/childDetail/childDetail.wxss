.box .top{
  width: 100%;
  display: flex;
  flex-direction: row;
  color: #2f138d;
  font-size: 36rpx;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.box .top>view{
  display: flex;
  flex-direction: row;
}

.box .title{
  width: 100%;
  height: 90rpx;
  border-radius: 10rpx;
  background-color: #8ccdf9;
  color: #0061e1;
  font-family: "黑体";
  font-size: 40rpx;
  text-align: center;
  line-height: 90rpx;
  margin-bottom: 30rpx;
}

.box .evaluate{
  width: 100%;
  padding: 28rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #8CCCF8;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}

.box .evaluate>view{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: around;
  align-items: center;
  color: #344A5E;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.box .evaluate>view .left{
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  white-space: pre-wrap;
}

.box .evaluate>view .right{
  width: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center
}

.box .evaluate>view image{
  width: 46rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.teacherEvaluate{
  width: 100%;
  min-height: 100rpx;
  /* padding: 0 20rpx; */
  box-sizing: border-box;
  color: #FF0056;
  font-size: 36rpx;
  margin-bottom: 50rpx;
}

.box .title2{
  width: 100%;
  color: #35495E;
  text-align: left;
  font-size: 40rpx;
  margin-bottom: 30rpx;
}

.parentEvaluate{
  width: 100%;
}

.parentEvaluate textarea{
  width: 95%;
  height: 300rpx;
  border-radius: 10rpx;
  border: 1px solid #9ED4FA;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.parentEvaluate view{
  padding: 0 20rpx;
  font-size: 36rpx;
  color: #2aa2ff;
  line-height: 48rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.submit{
  width: 330rpx;
  height: 76rpx;
  background-color: #2aa2ff;
  color: #ffffff;
  font-family: "黑体";
  border-radius: 10rpx;
  line-height: 76rpx;
  margin-bottom: 30rpx;
}

.parentEvaluate .history{
  width: 330rpx;
  height: 76rpx;
  background-color: #2aa2ff;
  color: #ffffff;
  font-family: "黑体";
  border-radius: 10rpx;
  line-height: 76rpx;
  text-align: center;
  margin: auto;
}

