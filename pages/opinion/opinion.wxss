.box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.title{
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.opinion{
  width: 100%;
  height: 400rpx;
  border: 1px solid #d8d8d8;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.btn{
  width:500rpx;
  height:80rpx;
  line-height:80rpx;
  border-radius:80rpx;
  color:#fff;
  text-align:center;
  background-color:#6899f8;
  font-size:32rpx;
  margin-top:40rpx;
}