
.Nav{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding-top: 20rpx;
}

.Nav>view{
  width: 240rpx;
  height: 164rpx;
  color: #ffffff;
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 40rpx;
  /* padding-top: 30rpx; */
  box-sizing: border-box;
}

.split{
  width: 100%;
  height: 20rpx;
  background-color: #F6F6F6;
  margin-bottom: 20rpx;
}

.slide{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.slider{
  width: 700rpx;
  height: 300rpx;
}

.slide-image{
  width: 100%;
  height: 100%;
}

.hot{
  width: 700rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.hot image{
  width: 50rpx;
  height: 53rpx;
}

.hot view{
  height: 100%;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #727171;
  margin-left: 20rpx;
}

.circle{
  width: 28rpx;
  height: 28rpx;
  background-color: #C0C0C0;
  border-radius: 50%;
  margin-right: 20rpx;
}

.boStory{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.lis{
  width: 700rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #646363;
}

.left{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.right{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.jiantou{
  font-size: 40rpx;
  margin-left: 6rpx;
}

.split2{
  width: 100%;
  height: 4rpx;
  background-color: #EFEFEF;
}