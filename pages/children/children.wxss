
.bigBox{
  width: 100%;
  padding: 80rpx;
  box-sizing: border-box;
}

.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 80rpx;
  border-radius: 20rpx;
  border: 1rpx solid #D4D4D4;
  box-shadow: 5rpx 5rpx 10rpx #D4D4D4;
  position: relative;
}

.box .active{
  position: absolute;
  right: 20rpx;
  bottom: 0rpx;
  font-size: 80rpx;
  color: #69BBFC;
}

.box .top{
  width: 100%;
  height: 80rpx;
  background-color: #69BBFC;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.box .bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 50rpx 0;
}

.box .headImg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.box .right{
  font-size: 36rpx;
  color: #545454;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.box .right view:nth-child(1){
  margin-bottom: 30rpx;
}

.box .edit{
  position:absolute;
  right:10rpx;
  top:10rpx;
  font-size:32rpx;
  color:#ffffff;
  width:100rpx;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
}