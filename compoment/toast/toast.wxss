/* pages/toast/toast.wxss */

.toast_content_box{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}

.toast_content{
  width: 40%;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  line-height: 60rpx;
}

.toast_content_text{
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}